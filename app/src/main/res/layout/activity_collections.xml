<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="com.aashreys.walls.application.activities.CollectionsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBarBackground">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_medium"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_close"
                    android:layout_width="@dimen/image_button_size"
                    android:layout_height="@dimen/image_button_size"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:background="?attr/selectableItemBackgroundBorderlessCompat"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp"/>

                <TextView
                    android:id="@+id/text_toolbar_title"
                    style="@style/Sublime.Text.ToolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:text="@string/title_collections"/>

                <ImageButton
                    android:id="@+id/button_add_collection"
                    android:layout_width="@dimen/image_button_size"
                    android:layout_height="@dimen/image_button_size"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:background="?attr/selectableItemBackgroundBorderlessCompat"
                    app:srcCompat="@drawable/ic_add_black_24dp"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.aashreys.walls.application.views.HintView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingBottom="@dimen/spacing_small"
        app:hv_hint="@string/hint_collection"
        app:hv_seen_key="@string/tag_hint_collection"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_image_sources"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</LinearLayout>
