<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        style="@style/Sublime.Image.Icon"
        android:id="@+id/image_icon"
        android:layout_width="@dimen/height_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginLeft="@dimen/spacing_xs"
        android:padding="@dimen/spacing_small_medium"/>

    <TextView
        android:id="@+id/text_title"
        style="@style/Sublime.Text.SingleListItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_weight="1"/>

    <ImageButton
        style="@style/Sublime.Image.Icon"
        android:id="@+id/button_remove"
        android:layout_width="@dimen/height_small"
        android:layout_height="@dimen/height_small"
        android:background="?attr/selectableItemBackgroundBorderlessCompat"
        android:padding="@dimen/spacing_small_medium"/>

    <ImageView
        style="@style/Sublime.Image.Icon"
        android:id="@+id/handle"
        android:layout_width="@dimen/height_small"
        android:layout_height="@dimen/height_small"
        android:padding="@dimen/spacing_small_medium"
        app:srcCompat="@drawable/ic_swap_vert_black_24dp"/>

</merge>