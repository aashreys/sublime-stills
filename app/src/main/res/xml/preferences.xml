<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/settings_title_themes">

        <SwitchPreference
            android:key="@string/pref_use_dark_mode"
            android:title="@string/settings_option_theme_dark"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="@string/pref_auto_dark_mode"
            android:title="@string/settings_option_auto_theme_dark"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_title_user_tips">

        <Preference
            android:key="@string/pref_show_tips"
            android:title="@string/settings_show_tips_again"/>

        <Preference
            android:key="@string/pref_show_onboarding"
            android:title="@string/settings_show_onboarding_again"/>

    </PreferenceCategory>

</PreferenceScreen>